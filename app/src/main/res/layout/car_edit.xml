<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/login_title_backColor"
        android:gravity="center" >

        <TextView
            android:id="@+id/tool_textview_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新建车辆"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="left" >

        <ImageView
            android:id="@+id/linear_imageview_back"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:contentDescription="@string/image_login_user_desc"
            android:paddingRight="27dp"
            android:scaleType="center"
            android:src="@drawable/back" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:stretchColumns="1" >

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="车牌号      "
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/linear_carsearch_PlateNo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:selectAllOnFocus="true"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="自编号"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/linear_carsearch_CarNo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:selectAllOnFocus="true"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="区域"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/linear_carsearch_Region"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="垃圾亭"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/linear_carsearch_RubbishSource"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="车型"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/linear_carsearch_CarType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="所属单位"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/linear_carsearch_Department"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="载质类型"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/linear_carsearch_RubbishType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="车辆自重"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/linear_carsearch_CarWeight"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:selectAllOnFocus="true"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="核定载重"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/linear_carsearch_CarCheckWeight"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:selectAllOnFocus="true"
                    android:textSize="14sp" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="保 存"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>